@model IEnumerable<DateTimeService.Models.TimeZoneModel>

@{
    ViewBag.Title = "Time Zone List";
}

<h2>Time Zone List - List is currently incomplete.</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UtcOffset)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDaylightSavingsTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UtcOffset)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDaylightSavingsTime)
        </td>
    </tr>
}

</table>
